@model DigitalArtShowcase.Models.ViewModels.ArtistEdit

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Artist</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" asp-route-id="@Model.Artist.ArtistId">
            
            <input type="hidden" name="ArtistId" value="@Model.Artist.ArtistId" />
            <div class="form-group">
                <label asp-for="Artist.FirstName"></label>
                <input asp-for="Artist.FirstName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Artist.LastName"></label>
                <input asp-for="Artist.LastName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Artist.ArtistBio"></label>
                <textarea asp-for="Artist.ArtistBio" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <label asp-for="Artist.Email"></label>
                <input asp-for="Artist.Email" class="form-control" />
            </div>

    <!-- Artwork Selection Section -->
            <h2>Select Artworks</h2>
            <div class="form-group">
                <label for="artworksSelect">Choose Artworks</label>
                <select asp-for="SelectedArtworkIds" asp-items="@(new MultiSelectList(Model.Artworks, "ArtworkId", "Title", Model.SelectedArtworkIds))" multiple="multiple" class="form-control" id="artworksSelect">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
</form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
