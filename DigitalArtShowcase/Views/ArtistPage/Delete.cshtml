@model DigitalArtShowcase.Models.ArtistDto

@{
    ViewData["Title"] = "Delete Artist";
}

<div class="container">
    <h1>Delete Artist</h1>
    <h3>Are you sure you want to delete this artist?</h3>

    <div>
        <h2>@Model.FirstName @Model.LastName</h2>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Biography:</strong> @Model.ArtistBio</p>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.ArtistId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
