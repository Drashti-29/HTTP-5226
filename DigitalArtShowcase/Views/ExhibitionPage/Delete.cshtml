@model DigitalArtShowcase.Models.ExhibitionDto

@{
    ViewData["Title"] = "Delete Exhibition";
}

<h1>Delete Exhibition</h1>

<h3>Are you sure you want to delete this exhibition?</h3>

<div>
    <h4>@Model.ExhibitionName</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <display>Name</display>
        </dt>
        <dd>
            @Model.ExhibitionName
        </dd>
        <dt>
            <display>Location</display>
        </dt>
        <dd>
            @Model.Location
        </dd>
        <dt>
            <display>Date</display>
        </dt>
        <dd>
            @Model.Date.ToString("MMMM dd, yyyy")
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.ExhibitionId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
