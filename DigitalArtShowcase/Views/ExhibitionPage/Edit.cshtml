@model ExhibitionDto

@{
    ViewData["Title"] = "Edit Exhibition";
}

<h2>Create Exhibition</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="ExhibitionName"></label>
        <input asp-for="ExhibitionName" class="form-control" />
        <span asp-validation-for="ExhibitionName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" type="date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <h4>Select Artworks</h4>
    <div id="artworks-container">
        @foreach (var artwork in Model.Artworks)
        {
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="artwork_@artwork.ArtworkId" name="Artworks[@artwork.ArtworkId].ArtworkId" value="@artwork.ArtworkId" />
                <label class="form-check-label" for="artwork_@artwork.ArtworkId">@artwork.Title</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Update Exhibition</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
