@model DigitalArtShowcase.Models.ExhibitionDto

@{
    ViewData["Title"] = "Create Exhibition";
}

<h2>Create Exhibition</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ExhibitionName"></label>
        <input asp-for="ExhibitionName" class="form-control" />
        <span asp-validation-for="ExhibitionName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" type="date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Artworks">Select Artworks</label>
        <select asp-for="Artworks" class="form-control" multiple>
            @foreach (var artwork in Model.Artworks)
            {
                <option value="@artwork.ArtworkId">@artwork.Title</option>
            }
        </select>
        <span asp-validation-for="Artworks" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Exhibition</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
