@model DigitalArtShowcase.Models.ArtworkDto

@{
    ViewData["Title"] = "Artwork Details";
}

<h1>Artwork Details</h1>

<div>
    <h2>@Model.Title</h2>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Year Created:</strong> @Model.CreationYear</p>
    <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
    <p><strong>Artist:</strong> @Model.ArtistName</p>
</div>

<hr />

<h3>Exhibitions</h3>
@if (Model.Exhibitions != null && Model.Exhibitions.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Exhibition Name</th>
                <th>Date</th>
                <th>Location</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var exhibition in Model.Exhibitions)
            {
                <tr>
                    <td>@exhibition.ExhibitionName </td>
                    <td>@exhibition.Date.ToShortDateString()</td>
                    <td>@exhibition.Location</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>This artwork is not part of any exhibitions.</p>
}
<hr />
<p>
    <a asp-action="Edit" asp-route-id="@Model.ArtworkId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>
