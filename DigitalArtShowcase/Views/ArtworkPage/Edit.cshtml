@model DigitalArtShowcase.Models.ArtworkDto

<h2>Edit Artwork</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="ArtworkId" />
    
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CreationYear"></label>
        <input class="form-control" asp-for="CreationYear" />
        <span asp-validation-for="CreationYear" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input class="form-control" asp-for="Price" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ArtistId"></label>
        <select asp-for="ArtistId" class="form-control">
            @foreach (var artist in ViewBag.Artists)
            {
                <option value="@artist.ArtistId">
                    @artist.FirstName @artist.LastName
                </option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Exhibitions</label>
        @foreach (var exhibition in Model.Exhibitions)
        {
            <div>
                <input type="checkbox" value="@exhibition.ExhibitionId" />
                @exhibition.ExhibitionName
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
