@model DigitalArtShowcase.Models.ArtworkDto

@{
    ViewData["Title"] = "Delete Artwork";
}

<div class="container">
    <h1>Delete Artwork</h1>
    <h3>Are you sure you want to delete this artwork?</h3>

    <div>
        <h2>@Model.Title</h2>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Year:</strong> @Model.CreationYear</p>
        <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.ArtworkId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
