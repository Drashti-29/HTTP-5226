@model DigitalArtShowcase.Models.ArtworkDto
@{
    ViewData["Title"] = "New Artwork";
}

<h1>New Artwork</h1>

<hr />
<div class="row">
 <div class="col-md-4">
<h2>Create Artwork</h2>
<form method="POST" action="/ArtworkPage/Add">
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
    </div>
    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description" />
    </div>
    <div>
        <label asp-for="CreationYear"></label>
        <input asp-for="CreationYear" type="number" />
    </div>
    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" />
    </div>
    <div>
        <label asp-for="ArtistId"></label>
        <input asp-for="ArtistId" type="number" />
    </div>

    <!-- Optional: Display associated exhibitions -->
            <div>
                <label>Exhibitions</label>
                @if (Model.Exhibitions != null && Model.Exhibitions.Any())
                {
                    <ul>
                        @foreach (var exhibition in Model.Exhibitions)
                        {
                            <li>@exhibition.ExhibitionName - @exhibition.Location</li>
                        }
                    </ul>
                }
                else
                {
                    <p>No exhibitions available.</p>
                }
            </div>

    <button type="submit">Create Artwork</button>
</form>


<a asp-action="Index">Back to List</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}